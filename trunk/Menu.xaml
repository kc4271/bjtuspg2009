<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="Demo.Menu"
    Title="Idioms Chaining"
    Height="560" Width="800" Loaded="Page_Loaded" mc:Ignorable="d">
    <Grid>
        <TextBlock Margin="274,72,272,0"  VerticalAlignment="Top" Height="51" Style="{DynamicResource TitleCenter-Sketch}" Text="Idioms Chaining" HorizontalAlignment="Stretch"/>
        <TextBlock Margin="82,178,0,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Height="50" Text="Welcome " FontSize="35" TextDecorations="None" HorizontalAlignment="Left" Width="156"/>
        <TextBlock Margin="246,178,272,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Height="50" FontSize="35" TextDecorations="None" x:Name="textUsrname" ToolTip="这里显示当前用户名" />
